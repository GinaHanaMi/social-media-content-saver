<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiveDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/receiveThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:scaleType="centerInside"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <FrameLayout
            android:id="@+id/dataFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/receiveTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Title: " />

                <TextView
                    android:id="@+id/receivePlatform"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Platform: " />

                <TextView
                    android:id="@+id/receiveSaveDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Save date: " />

                <TextView
                    android:id="@+id/receivingTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Link: " />

                <FrameLayout
                    android:id="@+id/foldersFrame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <FrameLayout
                                android:id="@+id/folderFrame"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/folderTitle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="FOLDERTITLE" />

                                        <TextView
                                            android:id="@+id/folderDescription"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="FOLDERDESCRIPTION" />

                                        <TextView
                                            android:id="@+id/folderCreateDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="FOLDERCREATEDATE" />
                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>