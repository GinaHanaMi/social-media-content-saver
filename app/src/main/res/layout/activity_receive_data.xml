<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receive_data_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receiveData.ReceiveDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/receiveThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:scaleType="centerInside"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />


        <FrameLayout
            android:id="@+id/dataFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/receiveTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Title"
                    android:inputType="text"
                    android:singleLine="true"
                    android:background="@android:color/transparent"/>

                <EditText
                    android:id="@+id/receiveDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:hint="Description"
                    android:inputType="text"
                    android:background="@android:color/transparent"/>

                <FrameLayout
                    android:id="@+id/foldersFrame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <FrameLayout
                                android:id="@+id/folderOptions"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <SearchView
                                        android:id="@+id/searchFolder"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        />

                                    <Button
                                        android:id="@+id/addNewFolder"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="+" />

                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/folderFrame"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        >

                                        <TextView
                                            android:id="@+id/folderTitle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="FOLDERTITLE" />

                                        <TextView
                                            android:id="@+id/folderDescription"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="FOLDERDESCRIPTION" />

                                        <TextView
                                            android:id="@+id/folderCreateDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="FOLDERCREATEDATE" />
                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>

                <Button
                    android:id="@+id/saveContent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Save" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>